  "author": "Ecommerce Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "mongodb": "^6.3.0",
    "redis": "^4.6.10",
    "clickhouse": "^2.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "ulid": "^2.3.0",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
