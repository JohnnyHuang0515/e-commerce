# Utility Service 環境變數配置

# 服務配置
PORT=3019
NODE_ENV=development
SERVICE_NAME=utility-service
SERVICE_VERSION=1.0.0

# 資料庫配置
MONGODB_URI=mongodb://admin:password123@localhost:27017/ecommerce_utility?authSource=admin
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# 檔案上傳配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv,txt,zip,rar
MAX_FILES_PER_REQUEST=10

# 備份配置
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# 日誌配置
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# 安全配置
JWT_SECRET=your-jwt-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 檔案處理配置
IMAGE_RESIZE_ENABLED=true
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# CSV處理配置
CSV_MAX_ROWS=10000
CSV_DELIMITER=,
CSV_ENCODING=utf8
