# Notification Service 環境變數配置

# 服務配置
PORT=3017
NODE_ENV=development
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0

# 資料庫配置
MONGODB_URI=mongodb://admin:password123@localhost:27017/ecommerce_notifications?authSource=admin
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# 郵件服務配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@ecommerce.com

# Socket.IO 配置
SOCKET_PORT=3016
SOCKET_CORS_ORIGIN=http://localhost:3000

# 日誌配置
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# 通知配置
NOTIFICATION_RETENTION_DAYS=90
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RATE_LIMIT=1000

# 安全配置
JWT_SECRET=your-jwt-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
