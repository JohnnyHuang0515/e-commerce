# Logistics Service 環境變數設定

# 服務設定
PORT=3010
NODE_ENV=development

# 資料庫設定
MONGODB_URI=mongodb://localhost:27017/ecommerce_logistics

# 物流商 API 設定
BLACK_CAT_API_URL=https://api.blackcat.com.tw
BLACK_CAT_API_KEY=your_black_cat_api_key
BLACK_CAT_API_SECRET=your_black_cat_api_secret

POST_OFFICE_API_URL=https://api.post.gov.tw
POST_OFFICE_API_KEY=your_post_office_api_key
POST_OFFICE_API_SECRET=your_post_office_api_secret

CONVENIENCE_STORE_API_URL=https://api.cvs.com.tw
CONVENIENCE_STORE_API_KEY=your_cvs_api_key
CONVENIENCE_STORE_API_SECRET=your_cvs_api_secret

# 物流設定
DEFAULT_SHIPPING_FEE=100
FREE_SHIPPING_THRESHOLD=1000
MAX_SHIPPING_WEIGHT=30000
MAX_SHIPPING_DIMENSIONS=150

# 配送區域設定
SUPPORTED_REGIONS=Taiwan,Penghu,Kinmen,Matsu
EXCLUDED_REGIONS=Offshore Islands

# 安全設定
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars

# 日誌設定
LOG_LEVEL=info
LOG_FILE=logs/logistics-service.log

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 追蹤設定
TRACKING_UPDATE_INTERVAL=300000
TRACKING_RETENTION_DAYS=90
