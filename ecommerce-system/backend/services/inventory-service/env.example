# Inventory Service 環境變數設定

# 服務設定
PORT=3012
NODE_ENV=development

# 資料庫設定
POSTGRES_DB=ecommerce_transactions
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# 庫存設定
DEFAULT_STOCK_LEVEL=100
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5
MAX_STOCK_LEVEL=10000
MIN_STOCK_LEVEL=0

# 安全庫存設定
SAFETY_STOCK_ENABLED=true
SAFETY_STOCK_DAYS=7
SAFETY_STOCK_PERCENTAGE=20

# 自動補貨設定
AUTO_REORDER_ENABLED=true
AUTO_REORDER_THRESHOLD=20
AUTO_REORDER_QUANTITY=100

# 庫存預警設定
STOCK_ALERT_ENABLED=true
STOCK_ALERT_EMAIL=admin@ecommerce.com
STOCK_ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# 安全設定
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars

# 日誌設定
LOG_LEVEL=info
LOG_FILE=logs/inventory-service.log

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 庫存同步設定
SYNC_INTERVAL_MINUTES=5
SYNC_BATCH_SIZE=100
SYNC_TIMEOUT_MS=30000
