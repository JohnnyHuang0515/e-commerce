# PRODUCT-SERVICE 環境配置
# 複製此文件為 .env 並修改相應值

# 服務配置
NODE_ENV=development
PORT=3002
SERVICE_NAME=product-service
SERVICE_VERSION=1.0.0

# 資料庫配置
# PostgreSQL
POSTGRES_DB=ecommerce_transactions
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB
MONGODB_URI=mongodb://admin:password123@localhost:27017/ecommerce?authSource=admin

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-for-development

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 檔案上傳配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv,txt,zip,rar
MAX_FILES_PER_REQUEST=5

# 日誌配置
LOG_LEVEL=info
LOG_FORMAT=combined
