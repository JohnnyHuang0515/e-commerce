# AI-SERVICE 環境配置
# 複製此文件為 .env 並修改相應值

# 服務配置
NODE_ENV=development
PORT=3004
SERVICE_NAME=ai-service
SERVICE_VERSION=1.0.0

# 資料庫配置
# MongoDB
MONGODB_URI=mongodb://admin:password123@localhost:27017/ecommerce?authSource=admin

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-for-development

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI 配置
OPENAI_API_KEY=your-openai-api-key-here
LANGCHAIN_API_KEY=your-langchain-api-key-here

# 推薦系統配置
RECOMMENDATION_ALGORITHM=hybrid
COLLABORATIVE_WEIGHT=0.6
CONTENT_BASED_WEIGHT=0.4
MIN_SIMILARITY_THRESHOLD=0.3

# 搜尋配置
SEARCH_INDEX_UPDATE_INTERVAL=3600000
MAX_SEARCH_RESULTS=100
DEFAULT_SEARCH_LIMIT=10

# 分析配置
ANALYTICS_BATCH_SIZE=1000
REPORT_GENERATION_TIMEOUT=300000
TREND_ANALYSIS_WINDOW=7

# 日誌配置
LOG_LEVEL=info
LOG_FORMAT=combined
