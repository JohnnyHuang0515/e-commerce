# AI 服務配置
NODE_ENV=development
PORT=3004
HOST=0.0.0.0

# Milvus 向量資料庫配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=product_vectors
MILVUS_DIMENSION=384
MILVUS_METRIC_TYPE=COSINE
MILVUS_INDEX_TYPE=IVF_FLAT
MILVUS_NLIST=1024
MILVUS_TOKEN=
MILVUS_DATABASE=default

# AI 模型配置
AI_MODEL_NAME=embedding-model
AI_MODEL_URL=
AI_MODEL_CACHE_DIR=./models
AI_MODEL_DEVICE=auto
AI_MODEL_DIMENSION=384

# 搜尋配置
SEARCH_DEFAULT_LIMIT=20
SEARCH_MAX_LIMIT=100
SEARCH_SIMILARITY_THRESHOLD=0.7
SEARCH_CACHE_ENABLED=true
SEARCH_CACHE_TTL=3600

# 推薦配置
RECOMMENDATION_DEFAULT_LIMIT=10
RECOMMENDATION_MAX_LIMIT=50
COLLABORATIVE_WEIGHT=0.6
CONTENT_WEIGHT=0.4
TRENDING_WEIGHT=0.2
MIN_BEHAVIOR_COUNT=5
MAX_SIMILAR_USERS=20

# Redis 快取配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_ENABLED=true

# MongoDB 配置
MONGODB_URI=mongodb://localhost:27017/ecommerce-ai
MONGODB_MAX_POOL_SIZE=10
MONGODB_TIMEOUT=5000

# 日誌配置
LOG_LEVEL=info
LOG_FILE=./logs/ai-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT 安全配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# 外部服務配置
PRODUCT_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
EXTERNAL_SERVICE_TIMEOUT=5000