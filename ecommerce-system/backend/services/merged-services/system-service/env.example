# SYSTEM-SERVICE 環境配置
# 複製此文件為 .env 並修改相應值

# 服務配置
NODE_ENV=development
PORT=3005
SERVICE_NAME=system-service
SERVICE_VERSION=1.0.0

# 資料庫配置
# MongoDB
MONGODB_URI=mongodb://admin:password123@localhost:27017/ecommerce?authSource=admin

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-for-development

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# 文件上傳配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*,application/json

# 備份配置
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=9

# 導出配置
EXPORT_DIR=exports
EXPORT_RETENTION_DAYS=7

# 日誌配置
LOG_DIR=logs
LOG_LEVEL=info
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_RETENTION_DAYS=30

# 通知配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

PUSH_NOTIFICATION_SERVER_KEY=your-fcm-server-key

# 監控配置
METRICS_COLLECTION_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90

# 清理配置
CLEANUP_INTERVAL=86400000
TEMP_FILE_RETENTION_HOURS=24
LOG_CLEANUP_INTERVAL=604800000

# 安全配置
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# 開發配置
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_METRICS=true
ENABLE_REAL_TIME_LOGS=true
