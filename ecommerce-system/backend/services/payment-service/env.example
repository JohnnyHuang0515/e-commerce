# Payment Service 環境變數設定

# 服務設定
PORT=3009
NODE_ENV=development

# 資料庫設定
MONGODB_URI=mongodb://localhost:27017/ecommerce_payment

# 外部支付 API 設定
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

LINE_PAY_CHANNEL_ID=your_line_pay_channel_id
LINE_PAY_CHANNEL_SECRET=your_line_pay_channel_secret
LINE_PAY_SANDBOX=true

# 銀行轉帳設定
BANK_TRANSFER_ENABLED=true
BANK_NAME=台灣銀行
BANK_ACCOUNT_NUMBER=1234567890
BANK_ACCOUNT_NAME=電商系統

# 安全設定
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars

# 日誌設定
LOG_LEVEL=info
LOG_FILE=logs/payment-service.log

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 支付設定
PAYMENT_TIMEOUT_MINUTES=30
REFUND_TIMEOUT_DAYS=30
MAX_PAYMENT_AMOUNT=100000
MIN_PAYMENT_AMOUNT=1
