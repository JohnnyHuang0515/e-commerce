# Log Service Environment Variables

# Server Configuration
PORT=3018
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/ecommerce_logs?authSource=admin
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# Log Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=5

# Service Configuration
SERVICE_NAME=log-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=Log Management Service

# Security Configuration
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=1000

# WebSocket Configuration
WS_PORT=3020
WS_CORS_ORIGIN=http://localhost:3000

# External Services
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
