# Permission Service 環境變數設定

# 服務設定
PORT=3013
NODE_ENV=development

# 資料庫設定
MONGODB_URI=mongodb://localhost:27017/ecommerce_permissions

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-for-permission-service
JWT_EXPIRES_IN=24h

# 日誌設定
LOG_LEVEL=info
LOG_FILE=logs/permission-service.log

# 安全設定
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API 設定
API_VERSION=v1
API_PREFIX=/api/v1

# 權限設定
DEFAULT_ROLE=CUSTOMER
ADMIN_ROLE=ADMIN
SUPER_ADMIN_ROLE=SUPER_ADMIN
